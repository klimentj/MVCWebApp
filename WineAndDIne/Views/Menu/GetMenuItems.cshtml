<a href="#" role="button" class="btn btn-large btn-primary" onclick="showModal()">Launch Demo Modal</a>

<div id="modalContainer"  class="modal" >

</div>

<script>

    function showModal(){
            $("#myModal").modal('show');
        }

    $(document).ready(function(){

         $('#tblMenuItems').DataTable({
            "processing": true,
            "serverSide": true,
            "ajaxSource": "@Url.Action("GetMenuItemsData", "Menu")" + "?id=" + @ViewBag.id,
            "columns": [

                { "data": "Id" },
                { "data": "Name" },
                { "data": "FoodType" },
                { "data": "FoodCategory" },
                { "data": "DrinkCategory" },
                { "data": "Price" },
                { "data": "Description" },
                {
                    "class": "details-control",
                    "orderable": false,
                    "data": null,
                    "defaultContent": "",
                    "render": function (o) { return '<a href="#" class="btnMenuItemEdit"  data-key="' + o.Id + '"  >' + 'Edit' + '</a>'; }
                },
            ]
        });

        $("table").on("click", ".btnMenuItemEdit", function () {
            var id = $(this).attr("data-key");
            var restaurantId = @ViewBag.id;
            var url = '@Url.Action("EditMenuItem","Menu")' + "?restaurantId=" + restaurantId + "&menuId=" + id;

            $.ajax({
                    type: "GET",
                    url: url,
                    contentType: "application/json",
                    dataType: "text",
                    success: function (response) 
                    {
                        $("#modalContainer").html(response);
                        $("#modalContainer").modal('show');
                    }
            });

        });


    });
</script>
